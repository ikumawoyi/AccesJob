@{
    ViewData["Title"] = "Our Clients";
}


<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/img/pic999.jpg" alt="First slide" />
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/img/pic551.jpg" alt="Second slide" />
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/img/nurses3.jpg" alt="Third slide" />
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/img/pic617.jpg" alt="Fourth slide" />
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="card text-center">
    <div class="card-body">
        <p class="card text-white text-center p-3" style="background-color: #04B57D;">
            As an employer there is no need for you to look further as Access 247 is here to help you provide solutions to
            your staff shortages. We understand recruitment is not easy and getting it wrong can be a detriment to any business.
            At Access 247, we help and support you from start to finish with exactly what you need, as we have an above industry
            standard aftercare support policy – we value our clients as you are the heart of our business and we won’t grow unless you grow too.
        </p>
    </div>
</div>
<br />

